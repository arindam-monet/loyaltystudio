{
  "name": "@loyaltystudio/api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development tsx watch src/index.ts",
    "build": "tsc",
    "start": "NODE_ENV=production node dist/index.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:push": "prisma db push",
    "prisma:seed": "NODE_ENV=development ts-node prisma/seed.ts",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "typecheck": "tsc --noEmit",
    "dev:debug": "prisma generate && tsx --inspect watch src/index.ts"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/swagger": "^9.4.2",
    "@google/generative-ai": "^0.2.1",
    "@loyaltystudio/schemas": "workspace:*",
    "@prisma/client": "^6.5.0",
    "@scalar/fastify-api-reference": "^1.28.8",
    "@supabase/supabase-js": "^2.39.3",
    "@trigger.dev/sdk": "3.3.17",
    "@types/bcrypt": "^5.0.2",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "fastify": "^5.0.0",
    "fastify-plugin": "^5.0.1",
    "got": "^14.4.7",
    "ioredis": "^5.3.2",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "resend": "^4.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@loyaltystudio/eslint-config": "workspace:*",
    "@loyaltystudio/typescript-config": "workspace:*",
    "@trigger.dev/build": "^3.3.17",
    "@types/node": "^20.11.19",
    "eslint": "^8.56.0",
    "prisma": "^6.5.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}