{
  "name": "@loyaltystudio/api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "prisma generate && tsx watch src/index.ts",
    "build": "prisma generate && tsc",
    "start": "node dist/index.js",
    "lint": "eslint \"src/**/*.ts*\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "typecheck": "tsc --noEmit",
    "dev:debug": "prisma generate && tsx --inspect watch src/index.ts"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/swagger": "^9.4.2",
    "@loyaltystudio/schemas": "workspace:*",
    "@prisma/client": "^6.5.0",
    "@scalar/fastify-api-reference": "^1.28.8",
    "@supabase/supabase-js": "^2.39.3",
    "fastify": "^5.0.0",
    "fastify-plugin": "^5.0.1",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@loyaltystudio/eslint-config": "workspace:*",
    "@loyaltystudio/typescript-config": "workspace:*",
    "@types/node": "^20.11.19",
    "eslint": "^8.56.0",
    "prisma": "^6.5.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
} 