# Shopify API credentials
SHOPIFY_API_KEY=your_api_key_from_partner_dashboard
SHOPIFY_API_SECRET=your_api_secret_from_partner_dashboard
SHOPIFY_APP_URL=https://your-app-url.com
# For local development, use ngrok URL, e.g., https://your-ngrok-subdomain.ngrok.io

# Scopes required by the app
SCOPES=read_products,write_products,read_orders,read_customers,write_customers,read_discounts,write_discounts,read_themes,write_themes

# Database connection
DATABASE_URL=file:dev.sqlite

# LoyaltyStudio API connection
LOYALTY_STUDIO_API_URL=http://localhost:3003
# Or your deployed API URL

# Session secret for encryption
SESSION_SECRET=your_random_string_for_session_encryption
